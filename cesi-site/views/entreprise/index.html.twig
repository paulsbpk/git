{% extends "base.html.twig" %}

{% block title %}Liste des Entreprises{% endblock %}

{% block body %}
    <h1>Liste des Entreprises</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            {% for entreprise in entreprises %}
                <tr>
                    <td>{{ entreprise.id }}</td>
                    <td>{{ entreprise.Nom_entreprise }}</td>
                    <td>{{ entreprise.Description }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune entreprise enregistrée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <nav>
        {% if page_courante > 1 %}
            <a href="?route=entreprises&page={{ page_courante - 1 }}">Précédent</a>
        {% endif %}

        Page {{ page_courante }} / {{ total_pages }}

        {% if page_courante < total_pages %}
            <a href="?route=entreprises&page={{ page_courante + 1 }}">Suivant</a>
        {% endif %}
    </nav>

    <h2>Ajouter une entreprise</h2>
    <form action="?route=entreprise_create" method="post">
        <label for="nom">Nom:</label>
        <input type="text" id="nom" name="nom" required>

        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea>

        <button type="submit">Ajouter</button>
    </form>
{% endblock %}
