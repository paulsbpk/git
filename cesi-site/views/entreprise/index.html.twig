{% block content %}
    <h1>Liste des entreprises</h1>

    {% if entreprises is empty %}
        <p>Aucune entreprise trouvée.</p>
    {% else %}
        <ul>
            {% for entreprise in entreprises %}
                <li>{{ entreprise.Nom_entreprise }} - {{ entreprise.Description }}</li>
            {% endfor %}
        </ul>

        <div>
            Page {{ page_courante }} sur {{ total_pages }}
            {% if page_courante > 1 %}
                <a href="?route=entreprises&page={{ page_courante - 1 }}">Précédent</a>
            {% endif %}
            {% if page_courante < total_pages %}
                <a href="?route=entreprises&page={{ page_courante + 1 }}">Suivant</a>
            {% endif %}
        </div>
    {% endif %}

    <a href="?route=entreprise_create">Ajouter une entreprise</a>
{% endblock %}
