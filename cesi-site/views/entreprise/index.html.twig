{% block title %}Gestion des Entreprises{% endblock %}

{% block content %}
    <h1>Liste des Entreprises</h1>

    <!-- Formulaire de création d'entreprise -->
    <form method="POST" action="index.php?route=entreprises">
        <label for="nom">Nom :</label>
        <input type="text" id="nom" name="nom" required>

        <label for="description">Description :</label>
        <textarea id="description" name="description" required></textarea>

        <button type="submit" name="submit">Créer</button>
    </form>

    <!-- Affichage de la liste des entreprises -->
    <ul>
        {% for entreprise in entreprises %}
            <li>{{ entreprise.Nom_entreprise }} - {{ entreprise.Description }}</li>
        {% else %}
            <li>Aucune entreprise enregistrée.</li>
        {% endfor %}
    </ul>
{% endblock %}